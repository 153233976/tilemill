#!/bin/bash

LIST="/etc/apt/sources.list.d/tilemill.list"

echo "
deb http://ppa.launchpad.net/developmentseed/mapbox/ubuntu maverick main
deb-src http://ppa.launchpad.net/developmentseed/mapbox/ubuntu maverick main

deb http://ppa.launchpad.net/chris-lea/node.js/ubuntu maverick main
deb-src http://ppa.launchpad.net/chris-lea/node.js/ubuntu maverick main

deb http://ppa.launchpad.net/mapnik/nightly-trunk/ubuntu maverick main
deb-src http://ppa.launchpad.net/mapnik/nightly-trunk/ubuntu maverick main
" > $LIST

# Mapbox key
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 0FB81AF3
# Node.js key
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys C7917B12
# Mapnik key
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 5D50B6BA

apt-get update
apt-get install tilemill
