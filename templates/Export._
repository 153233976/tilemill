<form><ul class='form'>
  <li>
    <label>Filename</label>
    <input type='text' value='<%=model.id%>' size='12' />
    <span class='description'>.<%=type%></span>
  </li>
  <li>
    <label>Export area</label>
    <div class='help'><strong class='key'>SHIFT + drag</strong> to crop</div>
    <div class='bboxForm'>
      <input class='w' type='text' name='bbox_0' size='4' value='-180' />
      <input class='s' type='text' name='bbox_1' size='4' value='-90' />
      <input class='e' type='text' name='bbox_2' size='4' value='180' />
      <input class='n' type='text' name='bbox_3' size='4' value='90' />
    </div>
  </li>
  <% if (type === 'png' || type === 'pdf') { %>
  <li>
    <label>Image size</label>
    <input type='text' value='400' size='4' /> x
    <input type='text' value='400' size='4' />
  </li>
  <% } %>
  <% if (type === 'mbtiles') { %>
  <li>
    <label>Zoom levels</label>
    <div class='slider'></div>
    <div class='zoomrange'>
      <span class='minzoom'></span>
      <span class='maxzoom'></span>
    </div>
    @TODO zoom slider
  </li>
  <% } %>
  <li class='buttons'>
    <input type='submit' value='Export' />
    <input type='button' value='Cancel' class='cancel' />
  </li>
</ul></form>
