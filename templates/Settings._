<div class='dock fill'>
  <div class='toggler icons fill-w'>
    <a class='active' href='#settingsProject'><span class='icon settings'></span>Project</a>
    <a href='#settingsTooltips'><span class='icon tooltip'></span>Tooltips</a>
    <a href='#settingsLegend'><span class='icon legend'></span>Legend</a>
  </div>
  <form class='settingsProject active'><ul class='form'>
    <li class='text'>
      <h2>Project information</h2>
      <div class='description'>Adjust metadata for this project.</div>
    </li>
    <li>
      <label for='name'>Name</label>
      <input type='text' name='name' size='40' />
    </li>
    <li>
      <label for='description'>Description</label>
      <input type='text' name='description' size='60' />
    </li>
    <li>
      <label for='attribution'>Attribution</label>
      <input type='text' name='attribution' size='60' />
    </li>
    <li>
      <label for='version'>Version</label>
      <input type='text' name='version' size='10' />
    </li>
    <li>
      <label for='format'>Image format</label>
      <select name='format'>
        <option value='png' selected='selected'>png (24-bit)</option>
        <option value='png8'>png (8-bit)</option>
        <option value='jpeg80'>jpeg (80%)</option>
        <option value='jpeg85'>jpeg (85%)</option>
        <option value='jpeg90'>jpeg (90%)</option>
        <option value='jpeg95'>jpeg (95%)</option>
      </select>
    </li>
    <li>
      <label for='minzoom'>Zoom range</label>
      @TODO: minzoom - maxzoom slider
    </li>
    <li>
      <label for='bounds'>Bounds</label>
      @TODO: [w, s, e, n]
    </li>
    <li>
      <label for='center'>Center</label>
      @TODO: [lon, lat, zoom]
    </li>
    <li class='buttons'>
      <input type='submit' value='Save' />
      <input type='button' value='Cancel' class='cancel' />
    </li>
  </ul></form>
  <form class='settingsTooltips'><ul class='form'>
    <li class='text'>
      <h2>Tooltips</h2>
      <div class='description'>Adjust interaction settings for this project.</div>
    </li>
    <li>
      <label for='interactivity_layer'>Layer</label>
      <select id='interactivity_layer'>
        {{#interactivity_layer}}
          <option value='{{id}}' {{#selected}}selected='selected'{{/selected}}>{{name}}</option>
        {{/interactivity_layer}}
      </select>
      <span class='description'>Layer to use for interaction data</span>
    </li>
    <li>
      <label for='interactivity_key_name'>Key name</label>
      <select id='interactivity_key_name'>
        {{#fields}}
          <option value='{{id}}' {{#selected}}selected='selected'{{/selected}}>{{id}}</option>
        {{/fields}}
      </select>
      <span class='description'>Field containing unique IDs for features on this layer</span>
    </li>
    <li>
      <label for='interactivity_template_teaser'>Teaser</label>
      <textarea cols='60' rows='2' id='interactivity_template_teaser'>{{template_teaser}}</textarea>
    </li>
    <li>
      <label for='interactivity_template_full'>Full</label>
      <textarea cols='60' rows='2' id='interactivity_template_full'>{{template_full}}</textarea>
    </li>
    <li>
      <label class='inline' for='interactivity_template_location'>Location</label>
      <input type='text' size='60' id='interactivity_template_location' value='' />
      <div class='description'>A web address that interaction clients can optionally navigate to on click</div>
    </li>
    <li>
      <div class='description'>
        HTML markup for interaction data. Any of the following tokens will be replaced:
        {{#fields}}
          <code>[{{id}}]</code>
        {{/fields}}
      </div>
    </li>
    <li class='buttons'>
      <input type='submit' value='Save' />
      <input type='button' value='Cancel' class='cancel' />
    </li>
  </ul></form>
  <form class='settingsLegend'><ul class='form'>
    <li class='text'>
      <h2>Legend</h2>
      <div class='description'>A legend to display on the map.</div>
    </li>
    <li>
      <label for='legend'>Legend</label>
      <textarea cols='60' rows='10' id='legend'>{{{legend}}}</textarea>
      <div class='description'>Enter text or HTML content.</div>
    </li>
    <li class='buttons'>
      <input type='submit' value='Save' />
      <input type='button' value='Cancel' class='cancel' />
    </li>
  </ul></form>
</div>

