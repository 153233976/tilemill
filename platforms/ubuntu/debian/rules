#!/usr/bin/make -f

files = $(shell find node_modules -name wscript | sed 's,/wscript,/,g')
pwd = $(pwd)

build:
	for file in $(files) ; do \
		if [ -f "$$file/Makefile" ]; then \
			cd $$file ; \
			make clean ; \
			./configure ; \
			make ; \
			cd $$pwd ; \
		fi ; \
	done

include /usr/share/cdbs/1/rules/debhelper.mk
