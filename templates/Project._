<div class='project'>

  <div class='bleed'><div class='header'>
    <div class='breadcrumb'>
      <a class='logo' href='/#!/'><span class='icon'></span> TileMill</a>
      <a href='/#!/project/<%= id %>'><%= get('name') || get('id') %></a>
    </div>
    <div class='actions joined'>
      <a class='button disabled' href='#save'><span class='icon reverse edit labeled'></span> Save</a>
      <span class='button dropdown' href='#export'>
        <span class='icon reverse labeled export'></span>
        Export
        <span class='icon reverse right dropdown'></span>
        <span class='menu'>
          <% if (window.abilities.exports.png) { %>
          <a href='#export-png' title='Export PNG'>PNG</a>
          <% } %>
          <% if (window.abilities.exports.pdf) { %>
          <a href='#export-pdf' title='Export PDF'>PDF</a>
          <% } %>
          <% if (window.abilities.exports.mbtiles) { %>
          <a href='#export-mbtiles' title='Export MBTiles'>MBTiles</a>
          <% } %>
          <a class='divider drawer' href='#exports'>View exports</a>
        </span>
      </span>
      <a class='popup button' href='#settings'>
        <span class='icon reverse settings'>Settings</span>
      </a>
    </div>
    <span class='icon spinner'></span>
  </div></div>

  <div class='map fill-w' id='map'>
    <div class='zoom-display'>Zoom <span class='zoom'></span></div>
  </div>

  <div class='layers'>
    <a href='#add' class='popup add button'><span class='icon reverse plus labeled'></span> Add layer</a>
    <ul></ul>
  </div>

  <div class='editor fill-e'>
    <div class='palette clearfix'>
      <div class='colors clearfix'></div>
      <div class='ref joined'>
        <a class='drawer button' href='#fonts'><span class='icon reverse fonts'>Fonts</span></a>
        <a class='drawer button' href='#carto'><span class='icon reverse reference'>Carto reference</span></a>
      </div>
    </div>
    <ul class='tabs toggler clearfix'></ul>
    <a class='popup add button'><span class='icon reverse plus'>Add stylesheet</span></a>
    <div class='code fill-s'></div>
    <div class='status fill-s'>
      <a href='#close' class='close button'><span class='icon reverse close'>Close</span></a>
      <div class='content'></div>
    </div>
  </div>

  <div id='drawer' class='pane fill-w'>
    <h2 class='title'></h2>
    <a href='#close' class='close button'><span class='icon reverse close'>Close</span></a>
    <div class='content fill-s'></div>
    <div class='mask'></div>
  </div>

  <div id='export' class='pane'>
    <h2 class='title'></h2>
    <div class='content'></div>
  </div>

</div>
