<form><ul class='form'>
  <li>
    <label>Filename</label>
    <input type='text' value='<%=model.id%>' size='12' />
    <span class='description'>.<%=type%></span>
  </li>
  <li>
    <label>Export area</label>
    <div class='bbox-frame'>
      <input type='text' id='bbox_0' size='4' />
      <input type='text' id='bbox_1' size='4' />
      <input type='text' id='bbox_2' size='4' />
      <input type='text' id='bbox_3' size='4' />
    </div>
  </li>
  <% if (type === 'png' || type === 'pdf') { %>
  <li>
    <label>Image size</label>
    <input type='text' value='400' size='4' /> x
    <input type='text' value='400' size='4' />
  </li>
  <% } %>
  <% if (type === 'mbtiles') { %>
  <li>
    <label>Zoom levels</label>
    @TODO zoom slider
  </li>
  <% } %>
  <li class='buttons'>
    <input type='submit' value='Export' />
    <input type='button' value='Cancel' class='cancel' />
  </li>
</ul></form>
