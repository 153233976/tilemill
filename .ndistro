# download and install a resource
resource() {
  local path=$1
  local url=$2
  local type=$3
  local file=`echo $url | grep -o "[a-zA-Z0-9_]*.$type"`
  if ! [ -d $path ]; then
    log "fetching $path"
    mkdir -p $path
    if test $type = 'zip'; then
        $GET $url > $file && \
        unzip -q -d $path $file && \
        rm $file
    elif test $type = 'tar'; then
        cd $path
        $GET $url | \
        tar -xz --strip 1
        cd $ROOT
    fi
  else
    log "already fetched $path"
  fi
}

